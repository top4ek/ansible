server {
  listen 80;
  server_name {{ item.domain }}.{{ item.zone }};

  return 301 https://$host$request_uri;
}

server {
  listen 443 ssl http2;
  server_name {{ item.domain }}.{{ item.zone }};
  ssl_certificate /etc/pki/{{ item.domain }}.{{ item.zone }}/fullchain.crt;
  ssl_certificate_key /etc/pki/{{ item.domain }}.{{ item.zone }}/private.pem;

  ssl_protocols TLSv1.3 TLSv1.2;
  ssl_prefer_server_ciphers on;

  ssl_dhparam /etc/pki/dhparams.pem;

  ssl_ecdh_curve secp521r1:secp384r1;
  ssl_ciphers EECDH+AESGCM:EECDH+AES256;

  ssl_session_cache shared:TLS:10m;
  ssl_buffer_size 4k;

  ssl_stapling on;
  ssl_stapling_verify on;
  resolver 1.1.1.1 1.0.0.1 ipv6=off;
  add_header Strict-Transport-Security max-age=31536000;

{% if item.root is defined %}
  root {{ item.root }};
{% endif %}

  location / {
    proxy_pass {{ item.dest }};
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $http_connection;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Client-IP $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
  }
}
